<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css?family=Fira+Sans&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="styles/style.css">
        <title>Document</title>
    </head>

    <body>
        <div class="add-new-list">
            <!-- <form action="/newlist" method="POST"> -->
                <input class="input-new-list" type="text" placeholder="Create new list" autocomplete="off">
                <button class="btn-new-list btn-anim" type="submit">+</button>
            <!-- </form> -->
        </div>
        <div class="main-container">
            <% lists.forEach(element => { %>
            <div class="list" id=<%= element.ID %>>
                <div class="list-title <%= element.color %>">
                    <h4 class="title"><%= element.title %></h4>
                    <div class="btn-delete">
                        <i class="fas fa-trash"></i>
                    </div>
                </div>
                <div class="list-body">
                    <% element.items.forEach(item => { %>
                    <div class="list-item" id=<%= item.ID %>>
                        <input type="checkbox" name="" <% if (item.done === true) { %> <%= 'checked' %> <% } %>>
                    <p class="item-text <% if (item.done === true) { %> <%= 'item-done' %> <% } %>"><%= item.value %></p>
                    </div>
                    <% }) %>
                </div>
                <div class="add-item">
                    <form action="/additem" method="POST">
                        <input class="input-item" type="text" name="newItem" placeholder="Add item" autocomplete="off">
                        <button class="btn-item <%= element.color %>" type="submit" name="listID"
                            value=<%= element.ID %>>+</button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="scripts/index.js"></script>
        <script src="https://kit.fontawesome.com/4ff1c0f09b.js" crossorigin="anonymous"></script>
    </body>

    <footer></footer>

</html>